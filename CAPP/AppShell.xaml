<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutItemIsVisible="False"
    Shell.TabBarIsVisible="False"
    xmlns:local="clr-namespace:CAPP"
    xmlns:localTwo="clr-namespace:CAPP.Pages.MainBlock">

    <TabBar>
        <ShellContent Route="LoginPage"
                      ContentTemplate="{DataTemplate local:LoginPage}"/>
            
        <ShellContent Route="Calculator"
                      ContentTemplate="{DataTemplate localTwo:MainCalculatorPage}"/>

        <ShellContent Route="Stats"
                      ContentTemplate="{DataTemplate localTwo:MainStatsPage}"/>

        <ShellContent Route="Activity"
                      ContentTemplate="{DataTemplate localTwo:MainActivityPage}"/>

        <ShellContent Route="Recipes"
                      ContentTemplate="{DataTemplate localTwo:RecipesPage}"/>

        <ShellContent Route="Settings"
                      ContentTemplate="{DataTemplate localTwo:SettingsPage}"/>

    </TabBar>

</Shell>
