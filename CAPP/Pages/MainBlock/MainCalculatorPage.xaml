                <HorizontalStackLayout Spacing="30">
                    <VerticalStackLayout>
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToActivityPage" NumberOfTapsRequired="1"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <Label Text="Активность"
                               FontFamily=""
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Image />
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <Label Text="Калькулятор"
                               FontFamily=""
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Image Source="line" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout>
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToStatsPage" NumberOfTapsRequired="1"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <Label Text="Статистика"
                               FontFamily=""
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Image />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Border.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#F54B87"
                              Offset="0.3"/>
                    <GradientStop Color="#F81464"
                              Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border WidthRequest="370"
                HeightRequest="430"
                Margin="0,10,0,0"
                StrokeShape="RoundRectangle 30,30,30,30"
                StrokeThickness="0"
                Padding="20">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.1"/>
            </Border.Shadow>
            <VerticalStackLayout>
                <FlexLayout x:Name="Flexlayout" 
                            JustifyContent="SpaceBetween"
                            Margin="0,0,0,5">
                    <Label Text="Добавьте продукты"
                       FontFamily=""
                       FontAttributes="Bold"
                       FontSize="20"/>
                    <Border WidthRequest="70"
                            HeightRequest="45"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            StrokeThickness="0"
                            Background="#F83D7F">
                        <Image Source="plusik" 
                               WidthRequest="23" 
                               HeightRequest="23"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="1"/>
                        </Border.GestureRecognizers>
                    </Border>
                </FlexLayout>
                <CollectionView x:Name="SearchCollection"
                                SelectionChanged="SearchCollection_SelectionChanged"
                                SelectionMode="Single"
                                HeightRequest="300">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border WidthRequest="330"
                                    Background="#F4F2F2"
                                    Padding="5"
                                    StrokeShape="RoundRectangle 10,10,10,10">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontFamily=""/>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Очистить"
                        FontAttributes="Bold"
                        FontFamily=""
                        Background="#F83D7F"
                        Clicked="Button_Clicked"
                        x:Name="ClearButton"/>
            </VerticalStackLayout>
        </Border>

        <Border Margin="0,10,0,0"
                StrokeShape="RoundRectangle 30,30,0,0"
                StrokeThickness="-1"
                Padding="20"
                HeightRequest="100">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.1"/>
            </Border.Shadow>
            <FlexLayout JustifyContent="SpaceAround">
                <Image Source="home"/>
                <Image Source="recipe"/>
                <Image Source="dumbbell"/>
                <Image Source="profile"/>
            </FlexLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>