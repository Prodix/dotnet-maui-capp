<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAPP.Pages.MainBlock.MainCalculatorPage"
             NavigationPage.HasNavigationBar="False"
             Title="MainCalculatorPage">
    <ContentPage.Resources>
        <Style TargetType="Border">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal"/>
                        <VisualState Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="Transparent"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout Background="#F4F2F2">
        <Border HeightRequest="300"
                StrokeShape="RoundRectangle 0,0,30,30"
                StrokeThickness="-1"
                Padding="26,33,26,0">
            <VerticalStackLayout>
                <Label Text="Результат"
                       FontFamily=""
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"
                       Margin="0,0,0,6"/>
                <Label Text="Общая калорийность"
                       FontFamily=""
                       TextColor="White"
                       FontSize="20"
                       Margin="0,0,0,20"/>

                <Label Text="0 ккал"
                       x:Name="Kcal"
                       FontFamily=""
                       TextColor="White"
                       FontSize="24"/>
                <Grid Margin="0,14,0,31.5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Text="Жиры"
                           FontFamily=""
                           TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <Label Text="0 г"
                           HorizontalOptions="Center"
                           FontFamily=""
                           x:Name="Fat"
                           TextColor="White"
                           FontSize="20"
                           Grid.Row="1"/>
                    <Label Text="Белки"
                           FontFamily=""
                           TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Grid.Column="1"/>
                    <Label Text="0 г"
                           HorizontalOptions="Center"
                           FontFamily=""
                           x:Name="Protein"
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="1"
                           Grid.Row="1"/>
                    <Label Text="Углеводы"
                           FontFamily=""
                           TextColor="White"
                           FontSize="20"
                           FontAttributes="Bold"
                           Grid.Column="2"
                           HorizontalOptions="Center"/>
                    <Label Text="0 г"
                           x:Name="Carb"
                           HorizontalOptions="Center"
                           FontFamily=""
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="2"
                           Grid.Row="1"/>
                </Grid>
