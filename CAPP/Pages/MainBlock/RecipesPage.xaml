<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAPP.Pages.MainBlock.RecipesPage"
             Title="RecipesPage">
    <VerticalStackLayout Background="#F4F2F2">
        <ScrollView HeightRequest="752">
            <VerticalStackLayout Spacing="7">
                <Border StrokeThickness="-1"
                        HeightRequest="85">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#F54B87"
                                  Offset="0.3"/>
                            <GradientStop Color="#F81464"
                                  Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Label Text="Рецепты"
                           VerticalOptions="Center"
                           FontSize="24"
                           Margin="25,0,0,0"
                           FontAttributes="Bold"
                           FontFamily=""
                           TextColor="White"/>
                </Border>
                <!--<Border StrokeThickness="0"
                        StrokeShape="RoundRectangle 16"
                        WidthRequest="370">
                    <AbsoluteLayout WidthRequest="370"
                                    HeightRequest="180">
                        <Label Text="План питания"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               ZIndex="10"
                               FontFamily=""
